<!-- 新規投稿 -->
<%= form_for(@post) do |f| %>
  <div class="field row">
    <%= f.label :"タイトル" %>
    <%= f.text_field :title, class: "title" %>
  </div>
  <div class="field row">
    <%= f.label :"投稿内容" %>
    <%= f.text_area :body, class: "body" %>
  </div>
  <div class="actions row">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>