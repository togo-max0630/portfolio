<!-- 新規投稿 -->
<div class="col-xs-3">
  <%= form_for(@post) do |f| %>
  <div class="post.new col-xs-10">
   <div class="field row">
     <%= f.label :title, class: "col-xs-10 title" %>
     <%= f.text_field :title, class: "col-xs-12 title" %>
   </div>
   <div class="field row">
     <%= f.label :body %>
     <%= f.text_area :body, class: "col-xs-12 body" %>
   </div>
   <div class="actions row">
     <%= f.submit class: "btn btn-primary col-xs-12" %>
   </div>
  </div>
  <% end %>
</div>

<!-- 投稿一覧表示 -->
<div class="col-xs-9">
<h2>お悩み一覧</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>投稿内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <%= attachment_image_tag(post.user, :profile_image, size: "100x60", fallback: "4dbc7e0f.jpg") %>
      </td>
      <td>
        <%= link_to post.title, post_path(post.id)%>
      </td>
      <td>
        <%= post.body %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>




