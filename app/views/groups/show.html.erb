<div class="col-xs-3">
  <h3>チャット名</h3>
    <div class="field">
      <h3>
        <%= @group.name %>
      </h3>
    </div>
    <div class="field">
        <%= link_to "戻る", groups_path, class: "back" %>
        <%= link_to "削除",@group, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %>
    </div>
</div>

<div class="col-xs-9">
  <div class="field">
      <h4>コメント<i class="fa fa-comment"></i></h4>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <a class="btn-xs"></a>
    </div>

    <% if user_signed_in? %>

      <div class="panel-body">
        <ul class="chat">
          <div id="messages_area">
            <%= render partial: 'messages/index', locals: { messages: @messages } %>
          </div>
        </ul>
      </div>

      <div class="comment-create">
        <%= render partial: 'messages/form', locals: { message: @message, group: @group } %>
      </div>

    <% end %>
  </div>
</div>