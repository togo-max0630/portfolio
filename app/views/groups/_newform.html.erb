<!-- 新規グループ作成 -->
<%= form_for(@group) do |f| %>

  <div class="form-group">
    <%= f.label :"タイトル", class: "col-xs-7 control-label" %>
    <%= f.text_field :name, placeholder: "トークテーマを入力して下さい", class: "col-xs-12 title" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "作成する", class: "col-xs-6 btn btn-primary pull-right" %>
  </div>

<% end %>