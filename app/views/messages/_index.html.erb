<!-- 非同期通信 -->
<%= messages.count %>件
<% messages.each do |message| %>
  <% unless message.id.nil? %>

    <div class="field">
      <%= attachment_image_tag(message.user, :profile_image, size: "50x50", class: "img-circle pull-left profile-thumb", fallback: "4dbc7e0f.jpg") %>
    </div>

    <div class="field">
      <%= message.user.name %>
    </div>

    <div class="message-text">
      <%= message.content %>
      <% if message.user == current_user %>
        <%= link_to "Destroy", group_message_path(message.group_id, message.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true, class: "message_destroy" %>
      <% end %>
    </div>

  <% end %>
<% end %>