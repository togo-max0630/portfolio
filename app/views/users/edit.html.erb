<div class="col-xs-12">
<%= render "layouts/error_messages", resource: @user %>
<h2>プロフィール編集</h2>
<%= form_for(@user) do |f| %>

<div class="col-xs-10">
<div class="form-group  col-xs-12">
  <%= attachment_image_tag(@user, :profile_image, size: "150x150",class: "img-circle pull-left profile-thumb col-sm-3 ", fallback: "4dbc7e0f.jpg") %><br><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "col-sm-9"  %>
</div>

<div class="form-group col-xs-12">
  <%= f.label :"名前", class: "col-sm-3" %>
  <%= f.text_field :name, class: "col-sm-3" %>
</div>

<div class="form-group col-xs-12">
  <%= f.label :"ニックネーム", class: "col-sm-3" %>
  <%= f.text_field :nickname, class: "col-sm-3" %>
</div>

<div class="form-group col-xs-12">
  <%= f.label :"職種", class: "col-sm-3" %>
  <%= f.select :category, User.categories.keys, prompt: "-- 選択してください --", class: "col-sm-3" %>
</div>
<div class="form-group col-xs-12">
  <%= f.label :"職種", class: "col-sm-3" %>
  <%= f.select :sub_category, User.sub_categories.keys, prompt: "-- 選択してください --", class: "col-sm-3" %>
</div>

<div class="form-group col-xs-12">
  <%= f.label :"郵便番号", class: "col-sm-3" %>
  <%= f.text_field :postal_code, class: "col-sm-3" %>
</div>

<div class="form-group col-xs-12">
  <%= f.label :"住所", class: "col-sm-3" %>
  <%= f.text_field :residence, class: "col-sm-3" %>
</div>


<div class="form-group col-xs-12">
  <%= f.label :"自己紹介", class: "col-sm-3" %>
  <%= f.text_area :introduction, class: "col-sm-7" %>
</div>

<div class="actions col-xs-12">
  <%= f.submit "更新", class: "btn btn-warning col-sm-1" %>
  <%= link_to '退会', quit_users_path, class: "btn btn-danger col-sm-1" %>
  <%= link_to "戻る", users_path, class: "btn btn-primary col-sm-1" %>
</div>

<% end %>

</div>
</div>




