<div class="col-xs-9">
<h2>Users</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>ニックネーム</th>
          <th>自己紹介</th>
        </tr>
      </thead>

      <tbody>
        <% @followings.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user.id) do %>
            <%= attachment_image_tag(user, :profile_image, size: "100x60", fallback: "4dbc7e0f.jpg") %>
            <% end %>
          </td>
          <td>
            <%= user.nickname %>
          </td>
          <td>
            <%= user.introduction %>
          </td>
          <td>
            <% if user.id != current_user.id %>
            <span id="follow-button_<%= user.id %>">
              <%= render 'users/follow-button', user: user %>
            </span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>