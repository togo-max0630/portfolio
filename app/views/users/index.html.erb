<div class="col-xs-12">
<h2>ユーザー一覧</h2>
<%= paginate @users %>
<%= render 'users/searchform', user: @user %> 
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>写真</th>
          <th>ニックネーム</th>
          <th>業界・職種</th>
          <th>投稿数</th>
          <th>フォロー？</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user.id) do %>
            <%= attachment_image_tag(user, :profile_image, size: "50x50", class: "img-circle pull-left profile-thumb", fallback: "4dbc7e0f.jpg") %>
            <% end %>
          </td>
          <td>
            <%= user.nickname %>
          </td>
          <td>
            <%= user.category %>・
            <%= user.sub_category %>
          </td>
          <td>
            <%= user.posts.count %>
          </td>
          <td>
            <% if user.id != current_user.id %>
            <span id="follow-button_<%= user.id %>">
              <%= render 'users/follow-button', user: user %>
            </span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
