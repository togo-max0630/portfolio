<%= render "devise/shared/error_messages", resource: resource %>
<div class="wrapper">
<div class="form-signin">
<h2 class="form-signin-heading">Let's Go! Sign Up</h2>
<hr class="colorgraph"><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-control col-xs-12">
    <%= f.label :"名前", class: "col-sm-5" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "名前", class: "col-sm-5" %>    
  </div>

  <div class="form-control col-xs-12">
    <%= f.label :"あだ名", class: "col-sm-5" %>
    <%= f.text_field :nickname, autofocus: true, autocomplete: "ニックネーム", class: "col-sm-5" %>
  </div>

  <div class="form-control col-xs-12">
    <%= f.label :"職種", class: "col-sm-4" %>
    <%= f.select :category, User.categories.keys, prompt: "-- 選択してください --", class: "col-sm-4" %>
  </div>
  <div class="form-control col-xs-12">
    <%= f.label :"職種", class: "col-sm-4" %>
    <%= f.select :sub_category, User.sub_categories.keys, prompt: "-- 選択してください --", class: "col-sm-4" %>
  </div>

  <div class="form-control col-xs-12">
    <%= f.label :"Email", class: "col-sm-5" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-5" %>
  </div>

  <div class="form-control col-xs-12">
    <%= f.label :"郵便番号", class: "col-sm-5" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号", class: "col-sm-5" %>
  </div>

  <div class="form-control col-xs-12">
    <%= f.label :"住所", class: "col-sm-5" %>
    <%= f.text_field :residence,　autofocus: true, autocomplete: "住所", class: "col-sm-7" %>
  </div>

  <div class="form-control col-xs-12">
    <%= f.label :"パスワード", class: "col-sm-5" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password"  %>
  </div>

  <div class="form-control col-xs-12">
    <%= f.label :"再確認　　　パスワード", class: "col-sm-5" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= f.submit "Sign up", class: "btn btn-primary col-xs-12" %>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
