<h1>DM</h1>

<h4>参加者</h4>
<% @entries.each do |e| %>
  <h5><strong><a href="/users/<%= e.user.id %>"><%= e.user.nickname%>さん</a></strong></h5>
<% end %>

<hr>
<% if @chats.present? %>
  <% @chats.each do |c| %>
    <strong><%=c.content %></strong>
    <small>by <strong><%= c.user.nickname %>さん</a></strong></small>
    <hr>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_for @chat do |f| %>
  <%= f.text_field :content, placeholder: "メッセージを入力して下さい", size: 70 %>
  <!-- どのチャットルームのメッセージが判断するため -->
  <%= f.hidden_field :room_id, value: @room.id %>
  <br>
  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "戻る", users_path, class: "btn-lg btn-success" %>